# Database Configuration
# For development with SQLite (easier setup)
DATABASE_URL=sqlite:///./rssbot.db

# For production with PostgreSQL (recommended)  
# DATABASE_URL=postgresql://rssbot:password@localhost:5432/rssbot

# Telegram Bot Configuration (REQUIRED - get from @BotFather)
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret
TELEGRAM_WEBHOOK_MODE=false

# Redis Configuration (for background jobs and caching)
REDIS_URL=redis://localhost:6379/0

# Service Security
SERVICE_TOKEN=dev_service_token_change_in_production

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
TELEGRAM_PAYMENTS_PROVIDER_TOKEN=your_telegram_payments_token

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key
AI_MODEL=gpt-3.5-turbo

# Service Ports (for local development)
DB_SERVICE_PORT=8001
BOT_SERVICE_PORT=8002
PAYMENT_SERVICE_PORT=8003
CONTROLLER_SERVICE_PORT=8004
AI_SERVICE_PORT=8005
FORMATTING_SERVICE_PORT=8006
CHANNEL_MGR_SERVICE_PORT=8007
USER_SERVICE_PORT=8008
MINIAPP_SERVICE_PORT=8009

# Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Service Communication Mode
# LOCAL_ROUTER_MODE=true  - Mount local services as FastAPI routers (single process)
# LOCAL_ROUTER_MODE=false - Use REST HTTP calls between services (default)
LOCAL_ROUTER_MODE=false